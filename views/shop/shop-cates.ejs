<% include ../partials/header %>
	<div class="ktieude text-xs-center">
		<div class="ktieudetrong">
			<h2>Shop</h2>
			<nav class="breadcrumb">
				<a href="">Home </a> &nbsp; / &nbsp; <a href="">Shop</a>
			</nav>
		</div>
		
	</div> <!-- HET KHOI TIEU DE -->
	<div class="tieudelistsp">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 wow fadeInUpBig">
					<h3>Product List</h3>
				</div>				
				<div class="col-sm-3 wow fadeInUpBig">
					<b class="btn btn-outline-secondary nutgrid"> <i class="fa fa-th-large"></i> Grid</b>
					<b class="btn btn-outline-secondary nutlist"> <i class="fa fa-list"></i> List</b>
				</div>
				<div class="col-sm-3 wow fadeInUpBig">
					<span class="show"> show all Product of <%= coutproduct %> results</span>
				</div>
				<div class="col-sm-6 wow fadeInUpBig">
					<div class="float-sm-right">
						<form class="woocommerce-ordering" >
							<select name="orderby" class="orderby" onchange = "cateschange(this)">
								<% datacates.forEach(function(motdanhmuc){ %>
									<option value="../shop-cates/<%= motdanhmuc.name_dmsp %>"><a href="shop"><%= motdanhmuc.name_dmsp %></a></option>
								<% }) %>
							</select>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div> <!-- HET TIEUDELISTSP -->
	
	<div class="khoispshop">
		<div class="container">
			<div class="row">
				<% dataproduct.forEach(function(motsanpham){if(motsanpham.danhmuc.name_dmsp == catename){ %>	
							<div class="col-sm-4 text-xs-center">
 								<div class="motsanphamchuan">
 									<a href="shop-singe/<%= motsanpham._id %>" class="cctop">
 										<span class="anh1sp"><img src="/<%= motsanpham.anhsp[0] %>" alt=""></span>
 										<h3> <%= motsanpham.tensp %></h3>
 										<span class="cat"> <%= motsanpham.danhmuc.name_dmsp %></span>
 										<div class="price">$<%= motsanpham.gia %></div>
 									</a>
 									<div class="tren">
 										<a href="../add-to-cart/<%= motsanpham._id %>"> Thêm vào giỏ hàng <i class="fa fa-long-arrow-right"></i> </a>
 									</div>
 								</div>
 							</div>
					
						<%}%>

						<%}) %>	
 							
				
			</div>  <!-- HET ROW -->
			
		</div><!--  HET CONTAINER -->
	</div> <!-- HET KHOISPSHOP -->



  <% include ../partials/footer %>
