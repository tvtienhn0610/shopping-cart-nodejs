						</div>
						
					</div>
				<%	}) %>			
				</div>
				<div class="col-sm-3">
					<form action="" class="search-form wow fadeInRightBig">
						<input type="text" class="search-field" placeholder="Tìm kiếm">
						<input type="submit" class="search-submit" >
					</form>

					<div class="widget wow fadeInRightBig">
						<h2 class="widget-title"> Danh mục tin</h2>
						<ul>
							 <% datacates.forEach(function(motdanhmuc){ %>
								<li><a href="../news-cate/<%= motdanhmuc._id %>"> <%= motdanhmuc.cates_name %> </a></li>
						<%	 }) %>
						</ul>
					</div>
				</div>
			</div>  <!-- HET ROW -->
		</div> <!-- HET CONTAINER -->
	</div>  <!-- HET TIN TƯC -->

