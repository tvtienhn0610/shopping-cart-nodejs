	</div> <!-- HET KHOI TIEU DE -->
	<div class="tintuc">
		<div class="container">
			<div class="row">
				<div class="col-sm-9">
					<% datanews.forEach(function(mottintuc){ %>
						<div class="mottinchuan wow fadeIn">
						<a href="../news-singe/<%= mottintuc._id %>" class="anhtin">
		 					<img src="<%= mottintuc.imgage %>" alt="" class="">
		 					<div class="ngaythang">
		 						<b><%= mottintuc.time.getDay() %>/<%= mottintuc.time.getMonth() %>/<%= mottintuc.time.getFullYear() %></b>
		 					</div>
		 				</a>
						<div class="noidungtin">
							<h3><a href="../news-singe/<%= mottintuc._id %>"><%= mottintuc.title %> </a></h3> 
							<div class="thongsotin"> <span class="author">By Admin</span> / <span class="comment">1 Comment</span></div>
